# Copy to terraform.tfvars and customize
# cp terraform.tfvars.example terraform.tfvars

# Must match the account your AWS credentials resolve to (validated before apply)
aws_account_id = "804552982765"

aws_region  = "eu-central-1"
# dev, staging, or prod — resource names are prefixed with dev_, stage_, or prod_; SSM paths use /mongodb/dev, /mongodb/stage, /mongodb/prod
environment = "dev"

# MongoDB credentials (change password in AWS SSM after first apply)
mongodb_root_username = "mongolabadmin"
mongodb_root_password = "ChangeMe123!"
mongodb_database      = "mongolab"

# Restrict access (recommended for production) - replace with your IP: curl -s ifconfig.me
# ssh_allowed_cidrs     = ["YOUR_IP/32"]
# mongodb_allowed_cidrs = ["YOUR_IP/32"]
# Open to all (dev only, use with MongoDB auth enabled):
ssh_allowed_cidrs     = ["0.0.0.0/0"]
mongodb_allowed_cidrs = ["0.0.0.0/0"]

# EC2 — root volume = OS + MongoDB binaries; data volume = MongoDB/Payload CMS data
ec2_instance_type        = "t2.micro"
ec2_root_volume_size    = 16   # GB; 16+ avoids install failures (default AMI ~8 GB is too small)
ec2_mongodb_volume_size = 20   # GB for /var/lib/mongo (increase for larger Payload DB, e.g. 50–100)
# ec2_ami = ""  # empty = auto-detect latest Amazon Linux 2023

key_pair_name = "mongolabkey"

# Optional: SNS topic for EC2 health alarm notifications
# ec2_health_alarm_sns_topic_arn = "arn:aws:sns:eu-central-1:123456789012:mongodb-alerts"
